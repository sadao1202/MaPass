{
  "name": "mapass",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win"
  },
  "build": {
    "appId": "com.example.mapass",
    "productName": "MaPass",
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "index.css"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "YOUR_GITHUB_USERNAME",
      "repo": "MaPass"
    }
  },
  "devDependencies": {
    "electron": "^37.2.5",
    "electron-builder": "^24.6.4"
  }
}
